[Trigger]
Operation = Upgrade
Operation = Remove
Type = Package
Target = *

[Action]
Description = Updating Polybar package count...
Depends = polybar
When = PostTransaction
Exec = /usr/bin/bash -c 'XDG_RUNTIME_DIR="/run/user/$(id -u meher)" sudo -u meher --preserve-env=XDG_RUNTIME_DIR -- polybar-msg action "#package-updates.hook.0" &>/dev/null || true'